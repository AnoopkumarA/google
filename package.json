{
  "name": "interview-copilot-native",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": ".",
  "dependencies": {
    "@google/genai": "^1.30.0",
    "bindings": "^1.5.0",
    "node-addon-api": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "node-gyp": "^10.0.1",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.9.5",
    "@types/node": "^16.18.86",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env BUILD_PATH=dist react-scripts build",
    "install:native": "node-gyp rebuild",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run install:native && npm run build && electron-builder",
    "postinstall": "node -e \"if (process.platform === 'win32') { require('child_process').execSync('node-gyp rebuild', { stdio: 'inherit' }) }\""
  },
  "build": {
    "appId": "com.interview.copilot",
    "productName": "Interview Copilot",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/Release/stealth.node",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "gypfile": true
}